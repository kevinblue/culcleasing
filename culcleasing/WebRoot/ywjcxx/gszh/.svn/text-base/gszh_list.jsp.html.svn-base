<% 
int intPageSize;   //一页显示的记录数
int intRowCount=0;   //记录总数
int intPageCount;  //总页数
int intPage;       //待显示页码
int i;
java.lang.String strPage;
     //设置一页显示的记录数
	 intPageSize = 200;
	 intPageCount=1;
	 //取得待显示页码
	 strPage = request.getParameter("page");
	 if(strPage==null || strPage=="")
	 {//表明在QueryString中没有page这一个参数，此时显示第一页数据
	     intPage = 1;
	 }
	 else
	 {//将字符串转换成整型
	      intPage = java.lang.Integer.parseInt(strPage);
		  if(intPage<1) intPage = 1;
	 } 
%>
<div id="cwCellContent">
<form name="list">
    <table class="cwDataList" width="100%"  border="0"  align="center" cellpadding="2" cellspacing="1" >
      <tr class="cwDLHead">
		  <th width="1%"></th>
		  <th>银行科目</th>
		  <th>开户银行</th>
	      <th>开户名</th>
	      <th>银行账号</th>		  
	      <th>登记人</th>
	      <th>最后更新日期</th>
      </tr>
<%
sqlstr = "SELECT * FROM base_account order by subject "; 
rs=db.executeQuery(sqlstr); 
if (rs.next())
  { 
	//获取记录总数
	rs.last();
	intRowCount = rs.getRow();	
	//记算总页数
	intPageCount = (intRowCount+intPageSize-1) / intPageSize;	
	//调整待显示的页码
	if(intPage>intPageCount) intPage = intPageCount;	
	if(intPageCount>0)
	//将记录指针定位到待显示页的第一条记录上
	   rs.absolute((intPage-1) * intPageSize + 1);
	
	//显示数据
	i=0;
	while(i<intPageSize && !rs.isAfterLast())
        {
%>
      <tr class="cwDLRow" >
        <td><input class="rd" type="radio" name="itemselect" value="<%=getDBStr(rs.getString("id"))%>"></td>
		<td align="center"><%=getDBStr(rs.getString("subject"))%></td>
        <td align="center"><%=getDBStr(rs.getString("account"))%></td>
        <td align="center"><%=getDBStr(rs.getString("bank_name"))%></td>
        <td align="center"><a href="gszh.jsp?czid=<%=getDBStr(rs.getString("id"))%>" target="_blank"><%=getDBStr(rs.getString("acc_number"))%></a></td>
        <td align="center"><%=getDBStr(rs.getString("modificator"))%></td>
        <td align="center"><%=getDBDateStr(rs.getString("modify_date"))%></td>
      </tr>
<%
       rs.next();
       i++;
	}
  }
rs.close(); 
db.close();
%>
    </table>
</form>
